<!DOCTYPE html>
<html lang="en">

<head>
    <link href="/css/style2.css" rel="stylesheet" />
    <title>Dashboard</title>
    <script src="https://js.stripe.com/v3/"></script>
    <script src="/js/script.js" defer></script>
</head>

<body>
    <div id="layoutDefault">
        <div id="layoutDefault_content">
            <main>
                <!-- Page Header-->
                <header class="page-header page-header-dark bg-gradient-primary-to-secondary">
                    <div class="page-header-content pt-10">
                        <div class="container text-center">
                            <div class="row justify-content-center">
                                <div class="col-lg-8">
                                    <div style="display: flex; align-items: center; justify-content: space-between;">
                                        <h1 class="page-header-title mb-3">Welcome <%= data.user %>
                                        </h1>
                                        <img style="border-radius: 50%; height: 100px; width: 100px;"
                                            src="<%= data.avatar %>" alt="Avatar">
                                    </div>
                                    <p class="page-header-text">This dashboard presents you with multiple options to
                                        manage your account</p>
                                    <% if(data.showUpdateProfile) { %>
                                        <a href="/completeProfile"><button class="btn btn-primary">Update
                                                Profile</button></a>
                                        <%} %>

                                            <% if(data.showUpgradePlan) { %>
                                                <a href="/pricing"><button class="btn btn-primary">Upgrade
                                                        Plan</button></a>
                                                <%} %>

                                                <% if(!(data.showUpgradePlan)) { %>
                                                    <a href="/cancelSubscription"><button class="btn btn-primary">
                                                        Cancel Subsciption
                                                    </button></a>
                                                    <%} %>

                                                    <a href="/logout"><button
                                                            class="btn btn-primary">Logout</button></a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="svg-border-rounded text-white">
                        <!-- Rounded SVG Border--><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 144.54 17.34"
                            preserveAspectRatio="none" fill="currentColor">
                            <path d="M144.54,17.34H0V0H144.54ZM0,0S32.36,17.34,72.27,17.34,144.54,0,144.54,0"></path>
                        </svg>
                    </div>
                </header>
                <section class="bg-white py-10">

                </section>
            </main>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"
        crossorigin="anonymous"></script>
    <script src="js/scripts.js"></script>
</body>

</html>