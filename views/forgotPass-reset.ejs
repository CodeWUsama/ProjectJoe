<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Verify Email</title>
        <link href="/css/style2.css" rel="stylesheet" />
    </head>
    <body class="bg-primary">
        <div id="layoutAuthentication">
            <div id="layoutAuthentication_content">
                <main>
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-5">
                                <!-- Basic forgot password form-->
                                <div class="card shadow-lg border-0 rounded-lg mt-5">
                                    <div class="card-header justify-content-center"><h3 class="font-weight-light my-4">Forgot Password </h3></div>
                                    <div class="card-body">
                                        <div class="small mb-3 text-muted">Please enter your new Password.</div>
                                        <!-- Forgot password form-->
                                        <form method="POST" action="/resetPassword">
                                            <!-- Form Group (email address)-->
                                            <div class="form-group">
                                                <label class="small mb-1" for="inputEmailAddress">Enter New Password</label>
                                                <input required name="password" class="form-control" id="inputEmailAddress" type="password" aria-describedby="emailHelp" placeholder="Enter Password" />
                                            </div>
                                            <div class="form-group">
                                                <label class="small mb-1" for="inputEmailAddress">Enter Confirm Password</label>
                                                <input required name="confirmPassword" class="form-control" id="inputEmailAddress" type="password" aria-describedby="emailHelp" placeholder="Enter Confirm Password" />
                                            </div>
                                            <% if(data.error) { %>
                                                <p style="color: red; text-align: center;">Password and Confirm password does not match.</p>
                                                <%} %>
                                            
                                            <!-- Form Group (submit options)-->
                                            <div class="form-group d-flex align-items-center mt-4 mb-0">
                                                <input type="submit" class="btn btn-primary"/>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="card-footer text-center">
                                        <div class="small"><a href="/login">Return to login</a></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
            </div>
        </div>
        <script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
        <script src="js/scripts.js"></script>
    </body>
</html>